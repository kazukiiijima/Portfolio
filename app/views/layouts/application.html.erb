<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <title>Portfolio</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link rel="stylesheet" href="app/assets/stylesheets/application.css"　media="all">
    <link href="https://fonts.googleapis.com/css?family=Teko" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=M+PLUS+1p:wght@300&display=swap" rel="stylesheet">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <h1 class="app_title">
        <%= link_to"Hello! Youtuber", root_path  %>
      </h1>
      <nav>
        <ul class="nav-list">
          <% if user_signed_in? %>
            <a class="nav-list-item">
              <%= link_to"マイページ", user_path(current_user.id) %>
            </a>
            <a class="nav-list-item">
              <%= link_to"投稿ページ", posts_path %>
            </a>
            <a class="nav-list-item">
              <%= link_to"ログアウト", destroy_user_session_path, method: :delete %>
            </a>
          <% else %>
            <a class="nav-list-item">
              <%= link_to"投稿ページ", posts_path %>
            </a>
            <a class="nav-list-item">
              <%= link_to"新規登録", new_user_registration_path %>
            </a>
            <a class="nav-list-item">
              <%= link_to"ログイン", new_user_session_path %>
            </a>
          <% end %>
        </ul>
      </nav>

    </header>
    </footer>
    <script type="text/javascript" src="app/assets/javascripts/jquery.min.js"></script>
    <script type="text/javascript" src="app/assets/javascripts/application.js"></script>
    <%= yield %>
  </body>
</html>
